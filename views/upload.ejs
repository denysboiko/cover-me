    <div class="container center-block" id="about" name="about" style="max-width: 750px !important">
        <br>

        <h1 class="centered">COVERS UPLOAD</h1>
        <hr>
    </div>
    <form id="upload" class="col-md-5" method="post" action="/upload" enctype="multipart/form-data">
